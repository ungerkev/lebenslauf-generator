{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "watchOptions": {
    "paths": ["src"],
    "ignored": [
      "dist/**",
      "**/*.d.ts",
      "**/*.js",
      "**/*.map",
      "**/*.tsbuildinfo",
      "node_modules/**",
      ".turbo/**",
      ".next/**"
    ]
  }
}
